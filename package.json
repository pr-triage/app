{
  "name": "pr-label",
  "version": "0.0.0-development",
  "description": "Check pull request status",
  "main": "index.js",
  "scripts": {
    "start-probot": "probot run ./index.js",
    "start": "PRIVATE_KEY=$(echo $PRIVATE_KEY | base64 -d) DEBUG=probot* npm run start-probot",
    "commit": "git-cz",
    "test": "mocha",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "posttest": "npm run lint",
    "coverage": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec",
    "postcoverage": "codecov",
    "precommit": "npm test",
    "prepush": "npm test",
    "commitmsg": "validate-commit-msg",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "engines": {
    "node": "8.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sotayamashita/pr-label.git"
  },
  "keywords": [
    "probot",
    "GitHub App",
    "pull request",
    "label"
  ],
  "author": "Sam Yamashita",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sotayamashita/pr-label/issues"
  },
  "homepage": "https://github.com/sotayamashita/pr-label#readme",
  "dependencies": {
    "debug": "^3.1.0",
    "probot": "^3.0.2"
  },
  "devDependencies": {
    "codecov": "^3.0.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "expect": "^21.2.1",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "localtunnel": "^1.8.3",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "semantic-release": "^8.2.3",
    "standard": "^10.0.3",
    "tap": "^10.7.3",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
