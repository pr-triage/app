{
  "name": "pr-triage",
  "version": "0.0.0-development",
  "description": "GitHub App built with Probot that support pull request workflow",
  "main": "index.js",
  "scripts": {
    "start": "DEBUG=probot* probot run ./index.js",
    "start:dev": "nodemon --exec \"npm start\"",
    "commit": "git-cz",
    "lint": "prettier --write {index,lib/**/*,test/pr-triage.test}.js",
    "test": "jest",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "coverage": "npm test  -- --coverage",
    "postcoverage": "codecov",
    "precommit": "npm test && lint-staged",
    "prepush": "npm test",
    "commitmsg": "validate-commit-msg",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sotayamashita/sidekick.git"
  },
  "keywords": [
    "probot",
    "probot-app",
    "probot-plugin",
    "github-app",
    "pull request",
    "label",
    "marge request"
  ],
  "author": "Sam Yamashita",
  "license": "Apache-2.0",
  "dependencies": {
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "probot": "^9.2.10"
  },
  "devDependencies": {
    "codecov": "^3.4.0",
    "commitizen": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^3.0.0",
    "jest": "^24.0.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^9.0.2",
    "nodemon": "^1.19.0",
    "prettier": "1.18.2",
    "probot-config": "^1.0.0",
    "raven": "^2.6.3",
    "semantic-release": "^15.13.15",
    "smee-client": "^1.1.0",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "{index,lib/**/*}.js": [
      "prettier --write {index,lib/**/*,test/pr-triage.test}.js",
      "git add"
    ]
  }
}
