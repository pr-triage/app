{
  "name": "sidekick-bot",
  "version": "0.0.0-development",
  "description": "GitHub App built with Probot that support pull request workflow",
  "main": "index.js",
  "scripts": {
    "start": "DEBUG=probot* probot run ./index.js",
    "commit": "git-cz",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "test": "jest",
    "coverage": "npm test  -- --coverage",
    "postcoverage": "codecov",
    "precommit": "npm test && lint-staged",
    "prepush": "npm test",
    "commitmsg": "validate-commit-msg",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "engines": {
    "node": "8.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sotayamashita/sidekick.git"
  },
  "keywords": [
    "probot",
    "probot-app",
    "probot-plugin",
    "github-app",
    "pull request",
    "label",
    "marge request"
  ],
  "author": "Sam Yamashita",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sotayamashita/sidekick/issues"
  },
  "homepage": "https://github.com/sotayamashita/sidekick#readme",
  "dependencies": {
    "debug": "^3.1.0",
    "probot": "^4.0.0"
  },
  "devDependencies": {
    "codecov": "^3.0.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "lint-staged": "^7.0.0",
    "semantic-release": "^12.2.2",
    "smee-client": "^1.0.1",
    "standard": "^10.0.3",
    "sync-glitch-cli": "^2.0.0",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "lib/**/*.js": [
      "standard --fix",
      "git add"
    ]
  },
  "standard": {
    "ignore": [
      "test/**"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "testPathIgnorePatterns": [
      "node_modules",
      "test/fixtures"
    ],
    "watchPathIgnorePatterns": [
      "node_modules",
      "test/fixtures"
    ]
  }
}
