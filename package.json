{
  "name": "pr-triage",
  "version": "0.0.0-development",
  "description": "GitHub App built with Probot that support pull request workflow",
  "main": "index.js",
  "scripts": {
    "start": "DEBUG=probot* probot run ./index.js",
    "start:dev": "nodemon --exec \"npm start\"",
    "commit": "git-cz",
    "lint": "prettier --write {index,lib/**/*,test/pr-triage.test}.js",
    "test": "jest",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "coverage": "npm test  -- --coverage",
    "postcoverage": "codecov",
    "precommit": "npm test && lint-staged",
    "prepush": "npm test",
    "commitmsg": "validate-commit-msg",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once --pro"
  },
  "engines": {
    "node": "8.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sotayamashita/sidekick.git"
  },
  "keywords": [
    "probot",
    "probot-app",
    "probot-plugin",
    "github-app",
    "pull request",
    "label",
    "marge request"
  ],
  "author": "Sam Yamashita",
  "license": "MIT",
  "dependencies": {
    "debug": "^3.1.0",
    "probot": "^7.0.0"
  },
  "devDependencies": {
    "codecov": "^3.0.2",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "jest": "^23.2.0",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.17.5",
    "prettier": "1.14.0",
    "raven": "^2.6.3",
    "semantic-release": "^15.5.4",
    "smee-client": "^1.0.1",
    "sync-glitch-cli": "^2.0.0",
    "travis-deploy-once": "^5.0.0",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "{index,lib/**/*}.js": [
      "prettier --write {index,lib/**/*,test/pr-triage.test}.js",
      "git add"
    ]
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "coverageThreshold": {
      "global": {
        "functions": 80,
        "lines": 80
      }
    },
    "testPathIgnorePatterns": [
      "node_modules",
      "test/fixtures",
      "test/simulates"
    ],
    "watchPathIgnorePatterns": [
      "node_modules",
      "test/fixtures",
      "test/simulates"
    ]
  }
}
